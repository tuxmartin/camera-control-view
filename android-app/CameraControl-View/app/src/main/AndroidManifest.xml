<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.vancl.martin.cameracontrol_view"
    android:versionCode="1"
    android:versionName="2015-04-14" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <activity
            android:name=".ActivityPlayAndControll"
            android:label="@string/title_activity_activity_play_and_controll"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- http://www.appcelerator.com/blog/2014/08/hiding-the-android-actionbar/ -->
        <activity
            android:theme="@style/Theme.NoActionBar"
            android:name=".FullscreenVideo"
            android:label="@string/title_activity_fullscreen_video"
            android:screenOrientation="landscape">
        </activity>

    </application>
s
</manifest>
